{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build for 68000",
            "type": "shell",
            "linux":{
                "command": "vc",
                "args": [
                        "+aos68k",
                        "/opt/code/src/main.c",
                        "/opt/code/src/scan.c",
                        "-o",
                        "/opt/code/build/main",
                ]
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(warning|error) ([0-9]*) in line ([0-9]*) of \"(.*)\": (.*)$",
                    "severity": 1,
                    "line": 3,
                    "file": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "linux":{
                "command": "rm",
                "args": [
                        "-r",
                        "/opt/code/build/*"
                ]
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(warning|error) ([0-9]*) in line ([0-9]*) of \"(.*)\": (.*)$",
                    "severity": 1,
                    "line": 3,
                    "file": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}
